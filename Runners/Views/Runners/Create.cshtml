@model Runners.Models.Runner

@{
    ViewData["Title"] = "Create";
}

<h1>Ingresar Corredor</h1>


<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-12">
            <div class="col-12 col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Number" class="control-label">Número</label>
                    <input asp-for="Number" class="form-control" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nombre</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Minutes" class="control-label">Minutos</label>
                    <input asp-for="Minutes" class="form-control" />
                    <span asp-validation-for="Minutes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Seconds" class="control-label">Segundos</label>
                    <input asp-for="Seconds" class="form-control" />
                    <span asp-validation-for="Seconds" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-12 col-md-3 col-xl-2 order-md-2">
            <div class="form-group">
                <input type="submit" value="Ingresar corredor" class="btn btn-primary btn-block" />
            </div>
        </div>
        <div class="col-12 col-md-3 col-xl-2 d-flex align-items-center order-md-1">
            <a asp-action="Index" class="btn btn-secondary btn-block">Regresar</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }
